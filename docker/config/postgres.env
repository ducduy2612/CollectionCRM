# PostgreSQL Environment Configuration

# Service-specific database users
AUTH_SERVICE_USER=auth_user
AUTH_SERVICE_PASSWORD=auth_password
BANK_SYNC_SERVICE_USER=bank_sync_user
BANK_SYNC_SERVICE_PASSWORD=bank_sync_password
PAYMENT_SERVICE_USER=payment_user
PAYMENT_SERVICE_PASSWORD=payment_password
WORKFLOW_SERVICE_USER=workflow_user
WORKFLOW_SERVICE_PASSWORD=workflow_password

# Read-only user for reporting
REPORTING_USER=reporting_user
REPORTING_PASSWORD=reporting_password

# Database configuration
POSTGRES_DB=collectioncrm
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Connection pool settings
POSTGRES_MAX_CONNECTIONS=100
POSTGRES_IDLE_TIMEOUT=10000

# Backup configuration
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION_LEVEL=9