# Frontend Environment Variables - Staging Environment

# API Configuration
VITE_API_BASE_URL=http://localhost/api

# Authentication
VITE_AUTH_STORAGE_KEY=collection_crm_auth_staging
VITE_AUTH_TOKEN_REFRESH_BUFFER=300000
VITE_AUTH_SESSION_TIMEOUT=86400000

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_DEBUG_MODE=false
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_ERROR_REPORTING=true

# UI Configuration
VITE_DEFAULT_THEME=light
VITE_ITEMS_PER_PAGE=20
VITE_MAX_ITEMS_PER_PAGE=100
VITE_DEFAULT_LANGUAGE=en
VITE_ENABLE_THEME_SWITCHER=true

# Development
VITE_DEV_MOCK_API=false
VITE_SHOW_VERSION_INFO=true

# Performance
VITE_ENABLE_SERVICE_WORKER=true
VITE_ENABLE_CACHE=true
VITE_CACHE_TTL=300000

# Security
VITE_ENABLE_CSP=true
VITE_ALLOWED_HOSTS=localhost
VITE_SECURE_COOKIES=false

# Monitoring
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/staging
VITE_SENTRY_ENVIRONMENT=staging
VITE_SENTRY_RELEASE=staging-latest

# File Upload
VITE_MAX_FILE_SIZE_MB=10
VITE_ALLOWED_FILE_TYPES=csv,xlsx,xls,pdf,jpg,png

# Pagination
VITE_DEFAULT_PAGE_SIZE=20
VITE_MAX_PAGE_SIZE=100

# Timeouts
VITE_API_TIMEOUT=30000
VITE_FILE_UPLOAD_TIMEOUT=120000

# Branding
VITE_APP_NAME=CollectionCRM
VITE_APP_VERSION=staging
VITE_COMPANY_NAME=Your Bank Name
VITE_SUPPORT_EMAIL=support@staging.collectioncrm.local