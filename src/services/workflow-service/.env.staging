# Server configuration - Staging Environment
PORT=3003
NODE_ENV=staging

# Database configuration
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=collectioncrm
DB_PASSWORD=staging_password_123
DB_DATABASE=collectioncrm_staging
DB_SSL=true
DB_SSL_REJECT_UNAUTHORIZED=false
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_ACQUIRE_TIMEOUT=60000

# API configuration
API_PREFIX=/api/v1/collection
API_VERSION=v1

# Logging configuration
LOG_LEVEL=warn
LOG_FORMAT=json
LOG_TIMESTAMP=true

# CORS configuration
CORS_ORIGIN=https://staging.collectioncrm.local
CORS_CREDENTIALS=true

# Kafka configuration
KAFKA_BROKERS=kafka:9092
KAFKA_CLIENT_ID=workflow-service-staging
KAFKA_GROUP_ID=workflow-staging
KAFKA_RETRY_ATTEMPTS=5
KAFKA_RETRY_INITIAL_TIME=3000
KAFKA_AUTO_COMMIT_INTERVAL=5000

# Workflow Engine Configuration
WORKFLOW_MAX_CONCURRENT_EXECUTIONS=50
WORKFLOW_EXECUTION_TIMEOUT_MINUTES=60
WORKFLOW_RETRY_MAX_ATTEMPTS=3
WORKFLOW_RETRY_DELAY_SECONDS=30

# Collection Campaign Settings
CAMPAIGN_BATCH_SIZE=100
CAMPAIGN_MAX_CONCURRENT_CAMPAIGNS=10
CAMPAIGN_EXECUTION_INTERVAL_MINUTES=5
CAMPAIGN_TIMEOUT_MINUTES=30

# Assignment Settings
AUTO_ASSIGNMENT_ENABLED=true
AUTO_ASSIGNMENT_ALGORITHM=round_robin
ASSIGNMENT_BATCH_SIZE=50
MAX_ASSIGNMENTS_PER_AGENT=100

# Notification Settings
NOTIFICATION_ENABLED=true
NOTIFICATION_EMAIL_ENABLED=true
NOTIFICATION_SMS_ENABLED=false
NOTIFICATION_WEBHOOK_ENABLED=true

# Performance Settings
CACHE_TTL_SECONDS=300
CACHE_MAX_ENTRIES=10000
QUERY_TIMEOUT_SECONDS=30

# Security
ENCRYPTION_KEY=staging_workflow_encryption_key_32_chars
API_KEY_HEADER=X-API-Key
REQUIRE_API_KEY=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=500

# Health Check
HEALTH_CHECK_TIMEOUT=10000
HEALTH_CHECK_DB_ENABLED=true
HEALTH_CHECK_KAFKA_ENABLED=true

# Metrics and Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_ENDPOINT=/metrics

# File Processing
UPLOAD_MAX_SIZE_MB=10
UPLOAD_ALLOWED_TYPES=csv,xlsx,xls
TEMP_DIR=/tmp/workflow-uploads