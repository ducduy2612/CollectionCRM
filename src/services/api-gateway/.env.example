# API Gateway Configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Auth Configuration
JWT_SECRET=dev_jwt_secret

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=10000
RATE_LIMIT_WINDOW_MS=900000

# Service URLs
AUTH_SERVICE_URL=http://auth-service:3000
BANK_SERVICE_URL=http://bank-sync-service:3002
PAYMENT_SERVICE_URL=http://payment-service:3000
WORKFLOW_SERVICE_URL=http://workflow-service:3003
CAMPAIGN_SERVICE_URL=http://campaign-engine:3004

# Service Timeouts (ms)
AUTH_SERVICE_TIMEOUT=30000
BANK_SERVICE_TIMEOUT=30000
PAYMENT_SERVICE_TIMEOUT=30000
WORKFLOW_SERVICE_TIMEOUT=30000
CAMPAIGN_SERVICE_TIMEOUT=30000

# CORS Configuration - Empty to allow all origins in development
ALLOWED_ORIGINS=
TRUST_PROXY=false