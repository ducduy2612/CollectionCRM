# Service Configuration
NODE_ENV=development
PORT=3004
SERVICE_NAME=campaign-engine

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=collectioncrm
DB_USERNAME=postgres
DB_PASSWORD=admin_password
DB_SSL=false
DB_SCHEMA=campaign_engine

# Kafka Configuration
KAFKA_BROKERS=kafka:9092
KAFKA_CLIENT_ID=campaign-engine
KAFKA_GROUP_ID=campaign-engine-group
KAFKA_INPUT_TOPIC=campaign.process.request
KAFKA_OUTPUT_TOPIC=campaign.process.result
KAFKA_DLQ_TOPIC=campaign.process.dlq

# External Services
BANK_SYNC_SERVICE_URL=http://localhost:3002
API_GATEWAY_URL=http://localhost:3000

# Cache Configuration
CACHE_TTL=3600
CACHE_CHECK_PERIOD=600

# Processing Configuration
BATCH_SIZE=1000
WORKER_THREADS=4
MAX_RETRIES=3
RETRY_DELAY=5000

# Monitoring
LOG_LEVEL=info
ENABLE_METRICS=true
METRICS_PORT=9091