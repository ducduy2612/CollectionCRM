# Service Configuration - Staging Environment
NODE_ENV=staging
PORT=3004
SERVICE_NAME=campaign-engine

# Database Configuration
DB_HOST=pgbouncer
DB_PORT=6432
DB_DATABASE=collectioncrm_staging
DB_USERNAME=collectioncrm
DB_PASSWORD=staging_password_123
DB_SSL=false
DB_SCHEMA=campaign_engine
DB_POOL_MIN=5
DB_POOL_MAX=30
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_ACQUIRE_TIMEOUT=60000
DB_POOL_CREATE_TIMEOUT=30000
DB_POOL_DESTROY_TIMEOUT=5000
DB_POOL_REAP_INTERVAL=1000
DB_POOL_CREATE_RETRY_INTERVAL=100
DB_STATEMENT_TIMEOUT=120000

# Kafka Configuration
KAFKA_BROKERS=kafka:9092
KAFKA_CLIENT_ID=campaign-engine-staging
KAFKA_GROUP_ID=campaign-engine-group-staging
KAFKA_INPUT_TOPIC=campaign.process.request
KAFKA_OUTPUT_TOPIC=campaign.process.result
KAFKA_DLQ_TOPIC=campaign.process.dlq

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=staging_redis_123
REDIS_DB=0
REDIS_CONNECT_TIMEOUT=10000
REDIS_COMMAND_TIMEOUT=5000

# External Services
BANK_SYNC_SERVICE_URL=http://bank-sync-service:3002
BANK_SYNC_API_PREFIX=/api/v1/bank-sync
API_GATEWAY_URL=http://api-gateway:3000

# Cache Configuration
CACHE_TTL=3600
CACHE_CHECK_PERIOD=600

# Processing Configuration
BATCH_SIZE=1000
WORKER_THREADS=4
MAX_RETRIES=3
RETRY_DELAY=5000

# Monitoring
LOG_LEVEL=warn
ENABLE_METRICS=true
METRICS_PORT=9091

# Security
TRUST_PROXY=true

# Performance Settings
CACHE_MAX_ENTRIES=10000
QUERY_TIMEOUT_SECONDS=30

# Health Check
HEALTH_CHECK_TIMEOUT=10000
HEALTH_CHECK_DB_ENABLED=true
HEALTH_CHECK_KAFKA_ENABLED=true